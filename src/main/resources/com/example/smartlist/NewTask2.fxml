<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="500.0" prefWidth="400.0" style="-fx-background-color: #1F252B;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" >

<top>
    <Label text="Add New Task" textFill="#a8a7ae" BorderPane.alignment="CENTER">
        <font>
            <Font name="Felix Titling" size="24.0" />
        </font>
        <padding>
            <Insets top="20.0" />
        </padding>
    </Label>
</top>

<center>
    <VBox spacing="10.0" BorderPane.alignment="CENTER">
        <padding>
            <Insets bottom="20.0" left="40.0" right="40.0" top="20.0" />
        </padding>
        <children>
            <Label text="Title" textFill="WHITE" />
            <TextField fx:id="fieldTitle" promptText="Enter task title..." />

            <Label text="Description" textFill="WHITE" />
            <TextField fx:id="fieldDesc" promptText="Enter details..." />

            <Label text="Due Date" textFill="WHITE" />
            <DatePicker fx:id="datePicker" maxWidth="Infinity" promptText="Select date" />

            <Label text="Category" textFill="WHITE" />
            <ComboBox fx:id="categoryBox" maxWidth="Infinity" promptText="Select Category" />

            <Label text="Priority" textFill="WHITE" />
            <ComboBox fx:id="priorityBox" maxWidth="Infinity" promptText="Select Priority" />
        </children>
    </VBox>
</center>

<bottom>
    <Button fx:id="saveButton" mnemonicParsing="false"  prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: lightblue;" text="SAVE TASK" BorderPane.alignment="CENTER">
        <font>
            <Font name="Felix Titling" size="14.0" />
        </font>
        <BorderPane.margin>
            <Insets bottom="30.0" />
        </BorderPane.margin>
    </Button>
</bottom>

</BorderPane>